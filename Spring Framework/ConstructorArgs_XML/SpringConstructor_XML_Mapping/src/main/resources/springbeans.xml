<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="e1" class="com.entity.Employee">
	<constructor-arg index ="0" value = "10"></constructor-arg>
	<constructor-arg index ="1" value = "Kajal"></constructor-arg>
	<constructor-arg index ="2" value = "12LPA"></constructor-arg>
	<constructor-arg index ="3" ref = "c"></constructor-arg>
	</bean>

	<bean id="c" class="com.entity.Country">
	<constructor-arg index ="0" value = "+91"></constructor-arg>
	<constructor-arg index ="1" value = "India"></constructor-arg>
	</bean>

</beans>